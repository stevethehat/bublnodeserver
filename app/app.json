{
	"type": "Application",
	"id": "application",
	"defaults": { 
		"type": "View",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical", "align": "left" } 
	},
	"children": [
		{
			"id": "BublApp",
			"children":[
				{
					"id": "Header",
					"layout": { "style": "horizontal", "align": "right" },
					"size": { "height": 60 },
					"children": [
						{
							"type": "Header",
							"content": "bubl editor"
						},
						{
							"type": "Image",
							"url": "/img/bubl.png",
							"size": { "width": 60 }
						}
					]
				},
				{
					"type": "ContentSwitcher",
					"children": [
						{
							"id": "Toolbar",
							"class": "toolbar",
							"layout": { "style": "horizontal" },
							"size": { "height": 30 },
							"defaults": {
								"type": "Button",
								"size": { "width": 100 }
							},
							"children": [
								{
									"content": "Home",
									"id": "Home"
								},
								{
									"content": "Button 2",
									"id": "Button 2"
								},
								{
									"type": "Text",
									"content": "hello i am a text control",
									"size": { "width": 200 }
								}
							]
						},
						{
							"id": "MainPanel",
							"layout": { "style": "horizontal" },
							"children": [
								{
									"id": "Palette",
									"size": { "width": 200 },
									"children":[
										{
											"type": "ControlGroup",
											"defaults": {
												"type": "PaletteItem",
												"size": { "height": 44 }
											},
											"children": [
												{
													"content": "Text",
													"icon": "fa-file-text-o"
												},
												{
													"content": "Image",
													"icon": "fa-file-image-o"										},
												{
													"content": "Video",
													"icon": "fa-file-movie-o"
												},
												{
													"content": "Columns",
													"icon": "fa-columns"
												}
											]
										}
									]
								},
								{
									"id": "BublEditor",
									"color": "#999"
								},
								{
									"id": "Properties",
									"size": { "width": 200 }
								}
							]
						}
					]
				},
				{
					"id": "StatusBar",
					"class": "statusbar",
					"size": { "height": 30 }
				}
			]
		},
		{
			"type": "View",
			"color": "blue",
			"position": { "bottom": 10, "right": 10 },
			"size": { "width": 40, "height": 40 },
			"children": [
				{
					"type": "Icon",
					"icon": "fa-question-circle",
					"show": true,
					"size": { "width": 40, "height": 40 }
				}
			]
		}
	]
}
