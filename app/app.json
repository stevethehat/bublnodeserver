{
	"type": "Application",
	"id": "application",
	"defaults": { 
		"type": "View",
		"show": true,
		"size": { "width": "max", "height": "max" },
		"layout": { "style": "vertical", "align": "left" } 
	},
	"children": [
		{
			"id": "BublApp",
			"children":[
				{
					"id": "Header",
					"layout": { "style": "horizontal", "align": "right" },
					"size": { "height": 60 },
					"style": { "border-bottom": "solid 1px #aaa" },
					"children": [
						{
							"type": "Header",
							"content": "bubl"
						},
						{
							"type": "Image",
							"url": "/img/bubl.png",
							"size": { "width": 60 },
							"style": { "padding-top": 6 }
						}
					]
				},
				{
					"type": "ContentSwitcher",
					"id": "Pages"
				},
				{
					"id": "StatusBar",
					"class": "statusbar",
					"size": { "height": 30 }
				}
			]
		},
		{
			"type": "View",
			"color": "blue",
			"position": { "bottom": 10, "right": 10 },
			"size": { "width": 40, "height": 40 },
			"children": [
				{
					"type": "Icon",
					"icon": "fa-question-circle",
					"show": true,
					"size": { "width": 40, "height": 40 }
				}
			]
		}
	]
}
